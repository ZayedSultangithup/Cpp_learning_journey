#include <iostream>
using namespace std;
int main()
{
    int day_number{0};
    cout << "Enter day number : ";
    cin >> day_number;

    switch (day_number)
    {
    case 1:
    {
        cout << "Sunday" << endl;
    }
    break;
    case 2:
    {
        cout << "Monday" << endl;
    }
    break;
    case 3:
    {
        cout << "Tuesday" << endl;
    }
    break;
    case 4:
    {
        cout << "Wednesday" << endl;
    }
    break;
    case 5:
    {
        cout << "Thursday" << endl;
    }
    break;
    case 6:
    {
        cout << "Friday" << endl;
    }
    break;
    case 7:
    {
        cout << "Saturday" << endl;
    }
    break;
    default:
    {
        cout << "Invalid number of weekdays" << endl;
    }
    }

    return 0;
}
